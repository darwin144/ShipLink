<script>
    // Ambil semua tautan dengan class "Link"
    var links = document.querySelectorAll('.Link');

    // Loop melalui setiap tautan dan tambahkan event listener
    links.forEach(function(link) {
        link.addEventListener('click', function() {
            // Hapus class "active" dari semua tautan
            links.forEach(function(innerLink) {
                innerLink.classList.remove('active');
            });

            // Tambahkan class "active" pada tautan yang diklik
            link.classList.add('active');
        });
    });
</script>



