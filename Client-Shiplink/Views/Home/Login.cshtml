@model Client_Shiplink.ViewModel.LoginVM


<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <section class="container login">
        <div class="w-50 h-50">
            <h3 class="text-center" style="color: rgba(0, 80, 157, 1); font-size: 20px;">Welcome Back</h3>
            <h1 class="text-center"  style="margin-bottom: 40px; font-size: 32px;">Log In to start saving!</h1>
            <form asp-action ="Login" class="form-login shadow text-left">
                <div class="form-group">
                    <label for="Email">Email </label>
                    <input asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" />
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password" />
                </div>
                <div class="d-flex align-items-center justify-content-between">
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1" />
                        <label class="form-check-label" for="exampleCheck1">Remember Me</label>
                    </div>
                    <p class="text-red-clr">Forgot Password</p>
                </div>
                <button type="submit" value="Login" class="btn bg-red-clr">Submit</button>
                <div>Don’t have an account? <a class="text-red-clr" href="~/Home/Register">Sign up now</a></div>
            </form>
        </div>
    </section>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>

